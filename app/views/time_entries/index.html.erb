<h1>Listing time_entries</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Task</th>
      <th>Description</th>
      <th>Running?</th>
      <th>Seconds</th>
      <th>Worked on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @time_entries.each do |time_entry| %>
      <tr>
        <td><%= time_entry.user.full_name %></td>
        <td><%= time_entry.task.andand.name %></td>
        <td><%= time_entry.description %></td>
        <td><%= time_entry.running? ? "YES" : "no" %></td>
        <td><%= time_entry.seconds %></td>
        <td><%= time_entry.worked_on %></td>
        <td><%= link_to 'Start', start_time_entry_path(time_entry), method: :put %></td>
        <td><%= link_to 'Stop', stop_time_entry_path(time_entry) %></td>
        <td><%= link_to 'Edit', edit_time_entry_path(time_entry) %></td>
        <td><%= link_to 'Destroy', time_entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Time entry', new_time_entry_path %>
<hr />
<%= render "form" %>
